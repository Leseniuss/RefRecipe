@model RefRecipe.Data.Shiftreport

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color: yellowgreen;">Muokkaa vuororaporttia</h1>


<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <!--  <label asp-for="Header" class="control-label" style="font-size: 20px; color: yellowgreen;"></label> -->
                <h3 style="font-size: 20px; color: yellowgreen;"> Otsikko</h3>
                <input asp-for="Header" class="form-control" />
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <!-- <label asp-for="Report" class="control-label" style="font-size: 20px; color: yellowgreen;"></label> -->
                <h3 style="font-size: 20px; color: yellowgreen;"> Vuororaportti</h3>
                <textarea asp-for="Report" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Report" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- <label asp-for="Timestamp" class="control-label" style="font-size: 20px; color: yellowgreen;"></label> -->
                <input asp-for="Timestamp" class="form-control" readonly hidden />
                <span asp-validation-for="Timestamp" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label for="password">Anna salasana :</label>
                <input type="password" id="password" name="password" />
                <input type="submit" value="Muokkaa raporttia" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>
@if (ViewBag.ErrorMessage != null)
{
    <div class="text-danger">@ViewBag.ErrorMessage</div>
}

<div>
    <a class="btn-group" href="/Shiftreport/Index">Takaisin vuororaportti listaan</a>
</div>
<a href="https://www.refresco.fi/fi/"> <img src="/refrescologo.png" width="40%" height="20%" /></a>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}