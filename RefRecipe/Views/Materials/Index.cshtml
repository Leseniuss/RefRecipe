@model IEnumerable<RefRecipe.Data.Material>

@{
    ViewData["Title"] = "Index";
    var materialList = Model.ToList();
   
    ViewBag.Color11 = ViewBag.materialColor1 ?? "lightgreen";
    ViewBag.Color22 = ViewBag.materialColor2 ?? "orange";
  

   
   
}


<h1 style="color: green;">Tervetuloa raaka-aineiden tietokantaan</h1>
<style>
    /* tbody {
                background-image: url("refrescologo.png");
                background-repeat: no-repeat;
                background-size: cover;

            } */
    .hometable {
        width: 100%;
        height: 100%;
        border-collapse: collapse;
    }

        .hometable th, .hometable td {
            border-bottom: 2px solid red;
            padding: 4px;
            text-align: center;
        }

        .hometable th {
            background-color: #f2f2f2;
        }
</style>

<div class="col-4 p-0 justify-content-end">
    <form asp-controller="Materials" asp-action="Index">
        <span class="btn-group">
            <input class="form-control" type="text" name="SearchText2" placeholder="Etsi raaka-aineen nimellä">
            <input class="p-1 m-lg-2 btn btn-sm btn-info" type="submit" value="Etsi" />
        </span>
    </form>
</div>
<div class="col-4 p-0 justify-content-end">
    <form asp-controller="Materials" asp-action="Index">
        <span class="btn-group">
            <input class="form-control" type="text" name="SearchCode2" placeholder="Etsi raaka-aineen koodilla">
            <input class="p-1 m-lg-2 btn btn-sm btn-info" type="submit" value="Etsi" />
        </span>
    </form>


</div>
<div class="col-4 p-0 justify-content-end">
    <a class="p-1 m-lg-2 btn btn-sm btn-info" href="/Materials/Create">Luo uusi raaka-aine</a>
</div>


<table class="hometable" id="DataTable">
    <thead>
        <tr>

            



            
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr style="background-color: @(materialList.IndexOf(item) % 2 == 0 ? ViewBag.Color11 : ViewBag.Color22)">

                <td style="font-weight: bold;">@Html.DisplayFor(modelItem => item.Koodi)</td>

                <td style="font-weight: bold;">@Html.DisplayFor(modelItem => item.Nimi)</td>

                <td style="font-weight: bold;">@Html.DisplayFor(modelItem => item.Sijainti)</td>


                <td>


                    <a asp-controller="Materials" asp-action="edit" asp-route-id="@item.Id" style="font-weight: bold;">Muokkaa</a> |
                    <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span> |
                    <a asp-controller="Materials" asp-action="delete" asp-route-id="@item.Id" style="font-weight: bold;">Poista</a> |


                </td>

            </tr>
        }

    </tbody>
</table>
