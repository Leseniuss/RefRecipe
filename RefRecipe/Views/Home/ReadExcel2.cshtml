@model List<List<string>>

<style>
    .row-border {

        border: 1px solid black;
        margin-bottom: 5px;
        line-height: 150%;

    }
    .cell-border {

        border: 1px solid blue;
        margin-bottom: 5px;
        line-height: 150%;
    }

    .ExcelTable {
        font-style: italic;
        font-weight: 600;
        width: 120%;
        height: 150%;
    }


</style>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<table class="ExcelTable">
    @foreach (var row in Model)
    {
                    <tr style="background-color: @(Model.IndexOf(row) % 2 == 0 ? "gray" : "white")">

            @foreach (var cell in row)
            {
               
            
                <td class="cell-border">
                    @{
                        double cellValue;
                        if (double.TryParse(@cell, out cellValue))
                        {
                          
                            <td>@string.Format("{0:0.00}", cellValue)</td>
                        }
                        else
                        {
                           
                            <td class="cell-border">@cell</td>
                        }
                    }
                </td>
            }
                    </tr>
    }
</table>

