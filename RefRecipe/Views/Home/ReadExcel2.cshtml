@model Tuple<List<List<string>>, List<string>>

<style>
    .row-border {
        border: 1px solid black;
        margin-bottom: 5px;
        line-height: 150%;
         
    }

    .cell-border {
        border: 2px solid blue;
        margin-bottom: 5px;
        line-height: 150%;
    }

    .ExcelTable {
        font-style: italic;
        font-weight: 500;
        color: red;
        width: 100%;
        height: 150%;
    }

</style>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
        
    </div>
}



<table class="ExcelTable">
    @foreach (var row in Model.Item1)
    {
        <tr style="background-color: @(Model.Item1.IndexOf(row) % 2 == 0 ? "blue" : "white")">

            @foreach (var cell in row)
            {


                double cellValue;
                if (double.TryParse(@cell, out cellValue))
                {

                    <td class="cell-border">@string.Format("{0:0.00}", cellValue)</td>
                }
                else
                {

                    <td class="cell-border">@cell</td>
                }

            }
        </tr>
    }
</table>

<table class="ExcelTable">
    <tr>PEKEKEKEKEKEKKEKEKE</tr>
    @foreach (var row in Model.Item2)
    {
       <tr>
            <th class="cell-border">@row</th>
       </tr>
       
       
    }
</table>



    
