@model List<List<string>>

<form method="post" enctype="multipart/form-data" action="@Url.Action("LoadDataFromExcel", "Card")">
    <div style="font-size: 20px">
        <label for="fileInput">Valitse valmistuskortti:</label>
        <input type="file" id="fileInput" name="excelFile" accept=".xlsx">
    </div>
    <div style="font-size: 20px">
        <button type="submit">Lataa valmistuskortin tiedot</button>
    </div>
</form>
<hr />

<style>



    .row-border {
        border: 1px solid black;
        margin-bottom: 1px;
        line-height: 150%;
    }


    .ExcelTable {
        color: red;
        width: 100%;
        height: 100%;
        background-image: url('refrescologo.png');
        background-repeat: no-repeat;
        background-size: cover;
        table-layout: fixed;
        border-collapse: collapse;
    }


        .ExcelTable td {
            padding: 1px;
            margin: 1px;
            border: 1px solid black;
            vertical-align: middle;
            width: 10%;
            height: 10%;
        }

    .cell-border textarea {
        width: 100%;
        height: 100%;
        border: 1px solid blue;
        padding: 1px;
        resize: none;
        box-sizing: border-box;
        text-align: center;
        font-weight: bold;
        vertical-align: middle;
    }

</style>



@if (Model != null)
{
    <table class="ExcelTable">
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr style="background-color: @(i % 2 == 0 ? "lightgray" : "white")">
                @for (int j = 0; j < Model[i].Count; j++)
                {
                    <td class="cell-border">
                        @Model[i][j]
                    </td>
                }
            </tr>
        }
    </table>
}



