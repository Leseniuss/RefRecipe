@model List<List<string>>

    <h1>MEHUKORTTITII TÄNNNEE PERKELELELE</h1>


<style>

    body {
        background-image: url('refrescologo.png');
        background-repeat: no-repeat;
        background-size: cover;
    }

    .row-border {
        border: 1px solid black;
        margin-bottom: 5px;
        line-height: 150%;
    }

    .cell-border {
        border: 2px solid blue;
        line-height: 150%;
        padding: 1px;
        margin: 1px;
        
        font-weight: bolder;
        text-align: center;
     
    }

    .ExcelTable {
        
        color: red;
        width: 100%;
        height: 100%;
        background-image: url('refrescologo.png');
        background-repeat: no-repeat;
        background-size: cover;
        table-layout: fixed;
        border-collapse: collapse;
    }


    .ExcelTable td {
      
        padding: 1px;
        margin: 1px;
        border: 1px solid black; /* Lisää reunaviiva */
        vertical-align: middle;
           
    }

    .cell-border textarea {
        width: 100%;
        height: 100%;
        border: 1px solid blue;
        padding: 1px; /* Poista ylimääräinen sisäinen tyhjä tila */
        resize: none;
        box-sizing: border-box;
        text-align: center;
        font-weight: bold;
        vertical-align: middle;
    }


</style>

<table class="ExcelTable">
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr style="background-color: @(i % 2 == 0 ? "lightgray" : "white")">
            @for (int j = 0; j < Model[i].Count; j++)
            {
                <td class="cell-border">
                    <textarea>@Model[i][j]</textarea>
                </td>
            }
        </tr>
    }
</table>