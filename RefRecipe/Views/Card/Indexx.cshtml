@model List<List<string>>

  


<style>

    

    .row-border {
        border: 1px solid black;
        margin-bottom: 1px;
        line-height: 150%;
    }


    .ExcelTable {
        color: red;
        width: 100%;
        height: 100%;
        background-image: url('refrescologo.png');
        background-repeat: no-repeat;
        background-size: cover;
        table-layout: fixed;
        border-collapse: collapse;
    } 


    .ExcelTable td {
            padding: 1px;
            margin: 1px;
            border: 1px solid black;
            vertical-align: middle;
            width: 10%;
            height: 10%;
    } 

    .cell-border textarea {
        width: 100%;
        height: 100%;
        border: 1px solid blue;
        padding: 1px; 
        resize: none;
        box-sizing: border-box;
        text-align: center;
        font-weight: bold;
        vertical-align: middle;
    }

</style>
<!--<div><a asp-controller="Card" asp-action="TakeScreenshot">ScreenSHOIOOOT</a></div>-->

<table class="ExcelTable">
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr style="background-color: @(i % 2 == 0 ? "lightgray" : "white")">
            @for (int j = 0; j < Model[i].Count; j++)
            {
                <td class="cell-border">
                    <!-- <textarea>@Model[i][j]</textarea>-->
                    @Model[i][j]
                </td>
            }
        </tr>
    }
</table>
   